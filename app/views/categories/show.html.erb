<% if current_user.id == @user.id || current_user.admin == true%>
	<div class="center">
		<span class="color"><h2><%= @category.name %></h2></span>
		<% if @category.products.first %>
			<% @products.reverse.each do |product| %>
				<%= link_to product.name, user_category_product_path(@user.id, @category.id, product.id) %>
				<br>
				<%= image_tag product.image.url(:medium), class: "smallproduct" %>
				<br><br>
			<% end %>
			<%= paginate @products %>
		<% else %>
			There are currently no products of this type.
		<% end %>
		<br><br>
		<span class="linkpadding"><%= link_to "[Add a Product]", new_user_category_product_path(@user.id, @category.id), class: "colorlink" %></span>
		<span class="linkpadding"><%= link_to "[In Stock]", user_category_instock_path(@user.id, @category.id), class: "colorlink" %></span>
		<span class="linkpadding"><%= link_to "[Sold Out]", user_category_soldout_path(@user.id, @category.id), class: "colorlink" %></span>
	</div>
<% end %>