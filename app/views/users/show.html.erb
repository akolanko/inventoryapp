<% if current_user.id == @user.id || current_user.admin == true%>
	<h2><%= @user.username %>'s Page</h2>
	<h4>Email: <%=@user.email%></h4>
	<h4>Username: <%=@user.username%></h4>
	<% if current_user.admin == true %>
		<h4>Admin: <%=@user.admin%></h4>
	<% end %>

	<span class="linkpadding"><%= link_to "[Edit Information]", edit_user_path(@user.id), class: "colorlink" %></span>
	<span class="linkpadding"><%= link_to "[Delete Account]", user_path(@user.id), method: :delete, confirm: "Are you sure you want to delete this account?", class: "colorlink" %></span>
<% end %>
